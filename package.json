{
  "type": "module",
  "name": "flowbite-react-admin-dashboard",
  "version": "1.1.0",
  "descrption": "flowbite-react admin dashboard",
  "homepage": "https://github.com/themesberg/flowbite-react-admin-dashboard",
  "bugs": "https://github.com/themesberg/flowbite-react-admin-dashboard/issues",
  "license": "UNLICENSED",
  "author": "Conner Davis <cdavis@scu.edu>",
  "repository": {
    "type": "git",
    "url": "https://github.com/themesberg/flowbite-react-admin-dashboard.git"
  },
  "scripts": {
    "build": "tsc && vite build",
    "dev": "vite --host",
    "format": "prettier --check --ignore-path .gitignore --write .",
    "lint": "eslint --ignore-path .gitignore .",
    "preview": "vite preview --host",
    "typecheck": "tsc",
    "postinstall": "flowbite-react patch"
  },
  "engines": {
    "node": ">= 16",
    "npm": ">= 8",
    "yarn": ">= 1"
  },
  "dependencies": {
    "@changesets/cli": "^2.29.4",
    "@types/bcrypt": "^5.0.2",
    "@types/node": "^22.15.30",
    "apexcharts": "^4.0.0",
    "axios": "^1.9.0",
    "bcrypt": "^5.1.1",
    "classnames": "^2.3.2",
    "express-session": "^1.18.1",
    "flowbite": "^1.8.1",
    "flowbite-react": "^0.11.8",
    "next": "^15.3.3",
    "react-apexcharts": "^1.4.1",
    "react-icons": "^4.10.1",
    "react-sortablejs": "^6.1.4",
    "sortablejs": "^1.15.0",
    "svgmap": "^2.10.1"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.0.0-alpha.16",
    "@types/express-session": "^1.18.1",
    "@types/react": "^19.1.6",
    "@types/react-dom": "^19.1.6",
    "@types/sortablejs": "^1.15.1",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "@typescript-eslint/parser": "^6.2.0",
    "@vitejs/plugin-react": "^4.5.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^8.9.0",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-react": "^7.33.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^3.0.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router": "^6.14.2",
    "react-router-dom": "^6.14.2",
    "tailwindcss": "^4.0.0-alpha.16",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
    "vitest": "^3.1.3"
  },
  "private": true,
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/strict",
      "plugin:jsx-a11y/recommended",
      "plugin:prettier/recommended",
      "plugin:react/recommended",
      "plugin:react-hooks/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "project": "./tsconfig.json"
    },
    "root": true,
    "rules": {
      "@typescript-eslint/consistent-type-imports": "error",
      "react/react-in-jsx-scope": "off",
      "react/no-unescaped-entities": "off"
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    }
  }
}