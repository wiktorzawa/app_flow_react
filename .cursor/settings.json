{
  "environment": {
    "nodeVersion": ">=18.0.0",
    "packageManager": "npm",
    "buildTool": "vite",
    "testRunner": "vitest"
  },
  "development": {
    "hotReload": true,
    "sourceMap": true,
    "typescript": {
      "strict": true,
      "checkJs": false,
      "allowSyntheticDefaultImports": true
    }
  },
  "linting": {
    "eslint": {
      "enabled": true,
      "configFile": ".eslintrc.json",
      "autoFix": true
    },
    "prettier": {
      "enabled": true,
      "configFile": ".prettierrc",
      "formatOnSave": true
    }
  },
  "editor": {
    "tabSize": 2,
    "insertSpaces": true,
    "trimTrailingWhitespace": true,
    "insertFinalNewline": true
  },
  "imports": {
    "organizeOnSave": true,
    "removeUnused": true,
    "sortOrder": [
      "react",
      "flowbite-react", 
      "react-icons",
      "relative"
    ]
  },
  "suggestions": {
    "flowbiteFirst": true,
    "typescriptStrict": true,
    "accessibilityChecks": true,
    "performanceHints": true
  },
  "paths": {
    "components": "./src/components",
    "pages": "./src/pages", 
    "layouts": "./src/layouts",
    "api": "./src/api",
    "types": "./src/types",
    "utils": "./src/helpers"
  },
  "build": {
    "outDir": "dist",
    "target": "es2020",
    "sourcemap": true,
    "minify": true
  }
}
