{
  "compilerOptions": {
    "target": "ES2016",
    "module": "CommonJS",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@shared-types/*": ["../shared-types/*"],
      "@/*": ["./src/*"]
    },
    "typeRoots": ["./node_modules/@types", "../node_modules/@types"],
    "allowJs": true
  },
  "include": [
    "src/**/*",
    "../shared-types/**/*",
    "src/**/*.js"
  ],
  "exclude": ["node_modules", "dist"]
}
